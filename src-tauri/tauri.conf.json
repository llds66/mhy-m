{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mhym",
  "version": "0.2.0",
  "identifier": "com.mhym.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mhym",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi","nsis"],
    "icon": [
      "icons/128.ico",
      "icons/256.ico",
      "icons/favicon.png"
    ]
  }
}
